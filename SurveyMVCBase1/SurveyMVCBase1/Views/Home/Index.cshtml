        <!-- 微信支付 二维码测试 开始 -->
        <br />

        <div id="QRCode1">
        </div>

        <script type="text/javascript">
        $(function () {
            fGetQRCode1();
        })
        function fGetQRCode1() {
            $.messager.progress({
                title: "",
                msg: "正在生成二维码:模式一,请稍后..."
            });
            $.ajax({
                type: "post",
                url: "/Home/GetQRCode1",
                data: {
                    time: new Date(),
                    productId:7788
                },
                success: function (json) {
                    $.messager.progress('close');//记得关闭
                    if (json.result) {
                        $('#QRCode1').qrcode(json.str); //生成二维码
                    }
                    else {
                        $('#QRCode1').html("二维码生成失败");
                    }
                }
            })
        }
        </script>

        <br />
        <!-- 微信支付 二维码测试 结束 -->
        
