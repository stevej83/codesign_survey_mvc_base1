@model SurveyMVCBase1.Models.Survey

@{
    Layout = "~/Views/Shared/_Layout_S1.cshtml";
    ViewBag.Title = "基本信息总结";
}

@using (Html.BeginForm("S1PageSum", "Surveys", FormMethod.Post, new { @class = "cbp-mc-form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SurveyID)

    <p>您第一部分的得分是 @ViewBag.Section1Score 分</p>
    <p>建议： @ViewBag.Section1Message</p>

    <div class="cbp-mc-submit-wrap"><input class="button" type="submit" value="继续" /></div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



