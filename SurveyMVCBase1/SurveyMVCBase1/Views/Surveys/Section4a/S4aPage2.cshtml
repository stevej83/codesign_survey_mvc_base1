@model SurveyMVCBase1.Models.Survey

@{
    ViewBag.Title = "S4aPage1 - 英国创业项目测试 - 独立创业";
}

<!-- 签证目的 -->

<h2>Survey section4a - page2 - 英国创业项目测试 - 独立创业</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.SurveyID)

        <div class="form-group">
            @Html.LabelFor(model => model.S4aQ3Answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.S4aQ3Answer, new { htmlAttributes = new { @class = "form-control", rows = 5, placeholder = "请填写", @title = "请填写", @required = true, @oninvalid = "this.setCustomValidity('请填写')", @oninput = "setCustomValidity('')" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.S4aQ4Answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    List<SelectListItem> S4aQ4AnswerListItems = new List<SelectListItem>();
                    S4aQ4AnswerListItems.Add(new SelectListItem
                    {
                        Text = "是",
                        Value = "yes"
                    });
                    S4aQ4AnswerListItems.Add(new SelectListItem
                    {
                        Text = "否",
                        Value = "no"
                    });
                }
                @Html.DropDownListFor(model => model.S4aQ4Answer, S4aQ4AnswerListItems, "-- 请选择 --", new { @class = "form-control", @title = "请选择", @required = true, @oninvalid = "this.setCustomValidity('请选择')", @oninput = "setCustomValidity('')" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.S4aQ5Answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.S4aQ5Answer, new { htmlAttributes = new { @class = "form-control", placeholder = "请填写邮政编码", @title = "请填写邮政编码", @required = true, @oninvalid = "this.setCustomValidity('请填写邮政编码')", @oninput = "setCustomValidity('')" } })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="继续" class="btn btn-default" />
            </div>
        </div>
    </div>
                    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}