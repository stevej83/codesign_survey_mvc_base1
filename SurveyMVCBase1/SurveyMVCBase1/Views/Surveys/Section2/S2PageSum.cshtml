@model SurveyMVCBase1.Models.Survey

@{
    Layout = "~/Views/Shared/_Layout_S2.cshtml";
    ViewBag.Title = "S2PageSum";
}

@using (Html.BeginForm("S2PageSum", "Surveys", FormMethod.Post, new { @class = "cbp-mc-form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SurveyID)

    <p>您第二部分的得分是 @ViewBag.Section2Score 分</p>
    <p>建议： @ViewBag.Section2Message</p>

    <div class="cbp-mc-submit-wrap"><input class="button" type="submit" value="继续" /></div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}